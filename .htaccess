RewriteEngine On

# Redirect index.php to root (hide index.php in URLs)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+index\.php [NC]
RewriteRule ^index\.php$ / [R=301,L]

# Redirect requests to .html URLs to remove .html from the URL
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s(.*)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# Internally rewrite requests without .html to the corresponding .html file
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Allow PHP files to be accessed without .php in the URL
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^/]+)/?$ $1.php [L]
